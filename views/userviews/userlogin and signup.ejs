    <div class="login_register_area">
        <div class="container">
            <div class="row gx-5">
                <div class="col-xl-5 col-lg-6 col-md-12 col-sm-12 offset-xl-1">
                    <h3 class="title-7">Login</h3>
                    <div class="login_wrapper">
                        <% if(locals.error) { %>
                            <div class="alert alert-danger" role="alert"><%= error %></div>
                            <% } %>
                        <form action="/Userlogin" method="post">
                            <div class="input_wrap">
                                <label>email address<span>*</span></label>
                                <input type="email" name="email" class="form-control">
                            </div>
                            <div class="input_wrap">
                                <label>Password<span>*</span></label>
                                <input type="password" name="password" class="form-control">
                                <span class="show-pass"><i class=""></i></span>
                            </div>
                            <div class="input_wrapp-2">
                                <input type="checkbox" name="check">
                                <span>Remember me </span>
                            </div>
                            <div class="input_wrap">
                                <button type="submit">log in</button>
                            </div>
                            <div class="input_wrap">
                                <a href="/OTPlogin"><button type="button">log in with PhoneNumber</button></a>
                            </div>
                            <div class="input_wrap">
                                <a href="#">Lost your password?</a>
                            </div>
                        </form>
                    </div>
                </div>
     <!-- user login End -->

     <!-- use signup -->

     <div class="col-xl-5 col-lg-6 col-md-12 col-sm-12">
        <h3 class="title-7">register</h3>
        <div class="login_wrapper login_wrapper_2">
            <form action="/UserRegister" method="post">
                <div class="input_wrap">
                    <label>Username<span>*</span></label>
                    <input type="text" name="name" class="form-control" id="check-name" oninput="return validateName()" required>
                    <span id="name-error"></span>
                </div>
                
                <div class="input_wrap">
                    <label>Email address<span>*</span></label>
                    <input type="email" name="email" class="form-control" id="check-email" oninput="return validateEmail()" required>
                    <span id="email-error"></span>
                </div>
                <div class="input_wrap">
                    <label>Password<span>*</span></label>
                    <input type="password" name="password" class="form-control" id="check-password" required>
                    <span id="password-error"></span>
                    
                </div>

                <div class="input_wrap">
                    <label>Confirm Password<span>*</span></label>
                    <input type="password"class="form-control" id="check-confirmpassword" oninput="return validateConfirmPassword()" required>
                    <span id="confirmpassword-error"></span>
                </div>
                <div class="input_wrap">
                    <label>Phone<span>*</span></label>
                    <input type="text"class="form-control" name="phone" id="check-phone" oninput="return validatephonenumber()" required>
                    <span id="phone-error"></span>
                </div>
                
                <p  style="color: red;"></p>
                <div class="input_wrap input_wrap_3">
                  
                    <button type="submit" id="check-submit" onclick="return validateForm()">register</button>
        
                    <span id="submit-error"></span>
                </div>
            </form>
        </div>
