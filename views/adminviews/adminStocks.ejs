            <input name="stock" value="<%= product.productstock %>" hidden>
            <% if (product.productstock) { %>
            <button type="submit" class="btn btn-danger mt-3">Unlist</button>
            <% } else { %>
            <button type="submit" class="btn btn-success">List</button>

            <% } %>
        </td>
      </form>
      </tr>
      <% }); %>
    </tbody>
  </table>
</section>

