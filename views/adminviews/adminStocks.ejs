<!-- admin stocks view  -->
<section id="footer" class="mt-5">
<table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">Image</th>
        <th scope="col">Name of the Shoe</th>
        <th scope="col">company Name</th>
        <th scope="col">Size</th>
        <th scope="col">Color</th>
        <th scope="col">Category</th>
        <th scope="col">Price</th>
        <th scope="col">Options</th>
      </tr>
    </thead>
    <tbody>
        <a href="/admin/AddProduct"> <button type="button" class="btn btn-success mt-4">Add Product</button></a>
        <a href="/admin/AddCategory"> <button type="button" class="btn btn-success mt-4">Add Category</button></a>
        <% products.forEach(function(product, i){ %>
      <tr >
        <!-- <th scope="row"> <%= i+1 %></th> -->
        <td class="product-images"><img src="/product-images/<%= product._id %>.jpg" alt="no"></td>
        <td><%= product.shoename %></td>
        <td><%= product.companyname %></td>
        <td><%= product.size %></td>
        <td><%= product.color %></td>
        <td><%= product.category %></td>
        <td><%= product.price %></td>
        <td>
            <a href="/admin/edit-pro/<%= product._id%>"><button class="btn btn-secondary mb-3" id="my-button" onclick="myFunction(this.id)">Edit</button></a><br>
            <a href=" /admin/delete-pro/<%= product._id%>"><button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this file? This action cannot be undone.')",myFunction(this.id)>Delete</button></a><br>
             
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</section>

