        <td><%= product.companyname %></td>
        <td><%= product.size %></td>
        <td><%= product.color %></td>
        <td><%= product.category %></td>
        <td><%= product.price %></td>
        <td>
            <a href="/admin/edit-pro/<%= product._id%>"><button class="btn btn-secondary mb-3" id="my-button" onclick="myFunction(this.id)">Edit</button></a><br>

            <!-- <form action="/admin/delete-pro/<%= product._id %>" method="post"> -->
