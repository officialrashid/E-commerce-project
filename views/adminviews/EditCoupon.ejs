<section class="page-align mt-5" id="footer">
    <div class="container">
        <h1>Add Coupon</h1>

        <form action="/admin/EditedCoupon/<%= coupon._id %>" method="post">
          
            <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">Coupn Code</label>
                <div class="col-sm-10">
                    <input type="text" name="Code" class="form-control" value="<%=coupon.Code %>" id="couponCode" oninput="return couponCode()">
                    <span id="couponCode-Error" style="color: red;"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail" class="col-sm-2 col-form-label">Coupon Name</label>
                <div class="col-sm-10">
                    <input type="text" name="Name" class="form-control" value="<%=coupon.Name %>" id="couponName"  oninput="return couponName()">
                    <span id="couponName-Error" style="color: red;"></span>
                </div>
            </div>
             <div class="row mb-3">
                <label for="inputPassword" class="col-sm-2 col-form-label">Discount</label>
                <div class="col-sm-10">
                    <input type="number" name="Discounts" class="form-control" value="<%=coupon.Discounts %>" id="couponDiscount" min="1" oninput="return couponDiscount()">
                    <span id="couponDiscount-Error" style="color: red;"></span>
                </div>
            </div> 
         
            <div class="row mb-3">
                <label for="inputDate" class="col-sm-2 col-form-label">Start Date</label>
                <div class="col-sm-10">
                    <input type="date" name="StartDates" class="form-control" value="<%=coupon.StartDates.toISOString().split('T')[0]; %>" id="couponStart" oninput="return couponStartDate()">
                    <span id="couponEnd-Error" style="color: red;"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputDate" class="col-sm-2 col-form-label">End Date</label>
                <div class="col-sm-10">
                    <input type="date" name="EndDates" class="form-control" value="<%=coupon.EndDates.toISOString().split('T')[0]; %>" id="couponEnd" oninput="return couponEndDate()">
                    <span id="couponEnd-Error" style="color: red;"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword" class="col-sm-2 col-form-label">Minimum Amount</label>
                <div class="col-sm-10">
                    <input type="number" name="MinimumAmounts" class="form-control" value="<%=coupon.MinimumAmounts %>" id="couponMinimum" oninput="return couponMinimumAmount()">
                    <span id="couponMinimum-Error" style="color: red;"></span>
                </div>
            </div> 
            <div class="row mb-3">
                <label for="inputPassword" class="col-sm-2 col-form-label">Maximum Amount</label>
                <div class="col-sm-10">
                    <input type="number" name="MaximumAmounts" class="form-control" value="<%=coupon.MaximumAmounts %>" id="couponMaximum" oninput="return couponMaximumAmount()">
                    <span id="couponMaximum-Error" style="color: red;"></span>
                </div>
            </div> 
            
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" id="submit" onclick="return handleSubmit()">update</button>
                    <span id="couponSubmit-Error" style="color: red;"></span>
                </div>
            </div>

        </form>
    </div>
</section>